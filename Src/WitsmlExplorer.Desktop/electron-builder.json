{
  "appId": "WEx-Desktop-App",
  "productName": "Witsml Explorer Desktop",
  "directories": {
    "output": "dist"
  },
  "files": [
    "dist/api/**/*",
    "dist/main/**/*",
    "dist/preload/**/*",
    "dist/renderer/**/*"
  ],
  "asar": true,
  "asarUnpack": ["dist/api/**/*"],
  "win": {
    "target": ["nsis"]
  },
  "nsis": {
    "artifactName": "WExDesktop.x64.${version}.${ext}",
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createStartMenuShortcut": true
  }
}
