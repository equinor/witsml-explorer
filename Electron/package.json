{
  "name": "WEx-Desktop",
  "description": "Witsml Explorer Desktop Edition",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev -w",
    "build:api": "dotnet publish -o ./dist/api /p:IncludeApiConfig=true /p:CONFIG_PATH=../../electron/api.config.json ../Src/WitsmlExplorer.Api/WitsmlExplorer.Api.csproj",
    "build:frontend": "electron-vite build",
    "build": "delete_build_dir.bat && yarn build:api && yarn build:frontend",
    "package": "yarn build && electron-forge package",
    "preview": "delete_build_dir.bat && yarn build:api && electron-vite preview"
  },
  "main": "./dist/main/main.js",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "cross-spawn": "^7.0.3",
    "electron": "^29.3.0",
    "electron-vite": "^2.1.0",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
